<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= nombrePagina %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/indexcss.css" />
  </head>

  <body class="min-h-screen text-gray-800 pt-20">
    <!-- Barra de navegación -->
    <%- include("partials/navbar") %>

    <!-- Sección Nosotros -->
    <section
      class="flex flex-col items-center justify-center px-6 py-16 text-center gap-10"
    >
      <h1 class="text-3xl font-bold text-black">Nosotros</h1>
      <div class="grid grid-cols-2 gap-8 max-w-4xl w-full">
        <% contacts.forEach(contact => { %>
        <a
          href="<%= contact.url %>"
          target="_blank"
          class="group bg-white/60 hover:bg-white/80 transition-all duration-300 rounded-2xl shadow-xl p-6 flex flex-col items-center text-center"
        >
          <div
            class="w-20 h-20 rounded-full bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center mb-4 shadow-md"
          >
            <img
              src="<%= contact.img %>"
              alt="<%= contact.alt %>"
              class="w-10 h-10 object-contain"
            />
          </div>
          <p
            class="text-gray-800 font-semibold text-lg group-hover:text-black transition-colors"
          >
            <%= contact.label %>
          </p>
        </a>
        <% }); %>
      </div>
    </section>
    <script src="/js/indexjs.js"></script>
  </body>
</html>
