<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= nombrePagina || 'Eventos - IESPR' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/indexcss.css" />
  </head>
  <body class="min-h-screen text-gray-800 pt-20">
    <!-- Navbar -->
    <%- include("partials/navbar") %>

    <!-- Eventos -->
    <section class="px-6 py-20 min-h-screen bg-white/50 backdrop-blur-sm">
      <h2
        class="text-4xl font-extrabold text-center text-gray-900 mb-16 drop-shadow-md"
      >
        Próximos Eventos
      </h2>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 max-w-7xl mx-auto"
      >
        <% listaEventos.forEach(evento => { %>
        <div
          class="group relative bg-white rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition duration-500 cursor-pointer card-evento"
          data-full="<%= evento.descripcion %>"
          data-img="<%= evento.imagen_url %>"
          data-titulo="<%= evento.titulo %>"
        >
          <div class="overflow-hidden">
            <img
              src="<%= evento.imagen_url %>"
              alt="Imagen del evento"
              class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-105"
            />
          </div>
          <div class="p-6">
            <h3
              class="text-2xl font-bold text-gray-800 mb-2 line-clamp-2 group-hover:text-indigo-600"
            >
              <%= evento.titulo %>
            </h3>
            <p class="text-gray-600 text-sm line-clamp-3">
              <%= evento.descripcion %>
            </p>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Modal -->
    <div
      id="modal"
      class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center hidden"
    >
      <div
        class="bg-white rounded-xl max-w-2xl w-full max-h-[90vh] overflow-auto p-6 relative mx-4 shadow-xl"
      >
        <button
          id="cerrarModal"
          class="absolute top-3 right-3 text-red-700 bg-white border border-red-300 rounded-full w-8 h-8 flex items-center justify-center text-xl font-bold shadow hover:bg-red-100 transition"
        >
          &times;
        </button>

        <img
          id="modalImagen"
          src=""
          alt="Imagen del evento"
          class="w-full h-64 object-cover rounded-md mb-4"
        />
        <h3 id="modalTitulo" class="text-xl font-bold mb-4 text-gray-800">
          Título del evento
        </h3>
        <p id="modalDescripcion" class="text-gray-700 whitespace-pre-line"></p>
      </div>
    </div>

    <!-- Script -->
    <script src="/js/modaleventos.js"></script>
    <script src="/js/indexjs.js"></script>
  </body>
</html>
