<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-[#e4e9f7] text-white select-none">
    <!-- Sidebar visible en pantallas grandes -->
    <div
      class="hidden md:block fixed top-0 left-0 h-full w-16 bg-[#0f0f1f] z-10"
    >
      <%- include('partials/sidebar') %>
    </div>

    <!-- Contenedor principal que se ajusta en móviles -->
    <section
      class="flex flex-col items-center justify-center min-h-screen px-4 py-8 md:ml-16 transition-all duration-300"
    >
      <div
        class="w-full max-w-[90%] sm:max-w-md md:max-w-lg bg-[#1a1a2e] rounded-lg shadow-lg"
      >
        <div class="p-5 sm:p-8 space-y-6">
          <h1
            class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-white text-center select-none"
          >
            Iniciar sesión
          </h1>

          <% if (error) { %>
          <p class="text-sm text-red-400 font-medium text-center select-none">
            <%= error %>
          </p>
          <% } %>

          <form class="space-y-4" method="POST" action="/login">
            <div>
              <label
                for="username"
                class="block mb-2 text-sm font-medium select-none"
              >
                Usuario
              </label>
              <input
                type="text"
                name="username"
                id="username"
                placeholder="usuario"
                required
                class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 focus:ring-2 focus:ring-blue-500 focus:outline-none"
              />
            </div>

            <div>
              <label
                for="password"
                class="block mb-2 text-sm font-medium select-none"
              >
                Contraseña
              </label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="••••••••"
                required
                class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 focus:ring-2 focus:ring-blue-500 focus:outline-none"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-[#00176B] hover:bg-[#326ac0] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors"
            >
              Entrar
            </button>
          </form>

          <!-- Botón solo visible en móviles -->
          <button
            onclick="window.location.href='/'"
            class="w-full bg-[#326ac0] hover:bg-[#00176B] focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-colors block md:hidden mt-4"
          >
            Regresar al inicio
          </button>
        </div>
      </div>
    </section>

    <script src="/js/script.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get("error") === "sesion_expirada") {
        Swal.fire({
          icon: "warning",
          title: "Sesión expirada",
          text: "Por seguridad, tu sesión ha sido cerrada por inactividad.",
          confirmButtonText: "Entendido",
        });
      }
    </script>
  </body>
</html>
