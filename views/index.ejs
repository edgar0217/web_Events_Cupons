    <noscript>
      <div class="w-full flex justify-center mt-4">
        <a href="/" target="_blank">
          <img
            src="//sstatic1.histats.com/0.gif?4959187&101"
            alt="contador de visitas"
            border="0"
          />
        </a>
      </div>
    </noscript>

    <script src="/js/indexjs.js"></script>
  </body>
</html>
